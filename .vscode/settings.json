{
    "nuxt.isNuxtApp": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent",
        "--show-column-numbers",
        "--allow-untyped-defs",
        "--allow-subclassing-any",
        "--allow-untyped-calls",
        "--max-line-length=80",
        "--disable=E0401"
      ],
    "pylint.args": [
        "--max-line-length=80",
        "--disable=E0401,E0611,C0114"
    ],
}